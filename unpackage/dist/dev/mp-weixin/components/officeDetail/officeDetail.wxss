
.container {
	/* position: relative; */
}
swiper,
image {
	width: 100%;
	height: 300rpx;
	margin-top: 5rpx;
}
.title {
	display: block;
	font-weight: 700;
	margin: 20rpx 20rpx 5rpx 20rpx;
}
.address {
	font-size: 20rpx;
	color: #8e9091;
	margin-left: 20rpx;
}
.locate {
	width: 50rpx;
	height: 50rpx;
	vertical-align: middle;
	margin-left: 10rpx;
}
.moneyAndPerson {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 80rpx;
}
.price {
	font-size: 30rpx;
	margin-left: 10rpx;
	line-height: 80rpx;
}
.personNum {
	margin-left: 50rpx;
}
.personImg {
	width: 60rpx;
	height: 60rpx;
	margin: 5rpx;
	vertical-align: middle;
}
.person {
	font-size: 30rpx;
	line-height: 80rpx;
}
.message {
	display: block;
	margin: 30rpx;
	font-size: 25rpx;
	text-indent: 2em;
	line-height: 35rpx;
}
.phone{
	width: 100%;
	height: 70rpx;
	margin: 10rpx;
	margin-top: 20rpx;
}
.phoneNum{
	line-height: 70rpx;
}
.phoneImg{
	width: 60rpx;
	height: 60rpx;
	vertical-align: middle;
	margin: 0 0 0 15rpx;
}
.advance {
	background-color: #ff6201;
	position: fixed;
	width: 240rpx;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 40rpx;
	right: 0;
	bottom: 0;
}


